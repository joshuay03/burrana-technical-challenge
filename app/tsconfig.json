{
    "compilerOptions": {
        "declaration": true,
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "lib": ["ES2020", "DOM"],
        "incremental": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}